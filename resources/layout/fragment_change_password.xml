<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/type_current_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insert_and_confirm_new_password"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/type_new_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_new_pw"
        android:textSize="14sp"
        android:textColor="@color/light_grey"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/type_current_password_text"/>

    <EditText
        android:id="@+id/type_new_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/grey_bottom_border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/type_new_password_text"/>

    <TextView
        android:id="@+id/confirm_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_confirm_pw"
        android:textSize="14sp"
        android:textColor="@color/light_grey"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/type_new_password_edit"/>

    <EditText
        android:id="@+id/confirm_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/grey_bottom_border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/confirm_password_text"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/change_save_button"
        android:background="@drawable/red_button"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
