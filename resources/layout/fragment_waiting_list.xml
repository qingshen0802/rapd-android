<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/wait_list_image"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:src="@drawable/velocimeter"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/number_ahead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:text="@string/ahead_number"
                android:textSize="72sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/wait_list_image"/>

            <TextView
                android:id="@+id/number_ahead_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/ahead_text"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/number_ahead"/>

            <TextView
                android:id="@+id/number_behind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:text="@string/behind_number"
                android:textSize="72sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/number_ahead_text"/>

            <TextView
                android:id="@+id/number_behind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/behind_text"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/number_behind"/>

            <TextView
                android:id="@+id/share_button_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/share_info"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/number_behind_text"/>

            <Button
                android:id="@+id/share_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                style="@style/grey_button"
                android:textColor="@color/light_green"
                android:text="@string/share"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/share_button_info"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>