<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_bottom_border"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingLeft="@dimen/large_left_margin"
                android:paddingRight="20dp"
                android:paddingStart="@dimen/large_left_margin"
                android:paddingTop="20dp">

            <TextView
                    android:id="@+id/transfer_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="7dp"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:background="@drawable/grey_bottom_border"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingEnd="20dp"
                android:paddingLeft="@dimen/large_left_margin"
                android:paddingRight="20dp"
                android:paddingStart="@dimen/large_left_margin"
                android:paddingTop="20dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_bank_for_details"
                    android:textColor="@color/light_grey"
                    android:textSize="13sp"/>

            <Spinner
                    android:id="@+id/bank_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text=""
                    android:background="@color/grey"
                    android:layout_marginBottom="15dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/branch"
                            android:textColor="@color/black"/>

                    <TextView
                            android:id="@+id/type_and_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"/>

                </LinearLayout>

                <TextView
                        android:id="@+id/identifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/bank_identifier"
                        android:textColor="@color/black"/>


                <TextView
                        android:id="@+id/company_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/company_text"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/cnpj_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:text="@string/cnpj_number"
                        android:textColor="@color/black"/>

                <Button
                        android:id="@+id/upload_reciept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lightgrey_button"
                        android:paddingEnd="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/upload_reciept"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingBottom="35dp">

            <Button
                    android:id="@+id/ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_left_margin"
                    android:layout_marginStart="@dimen/large_left_margin"
                    android:background="@drawable/red_button"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:text="@string/conclude"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
