<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/month_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/month_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total no mês"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/month_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSAÇÕES"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/month_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 00,00"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_below="@+id/month_total"/>

        <TextView
            android:id="@+id/month_transactions_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:paddingEnd="80dp"
            android:paddingRight="80dp"
            android:layout_below="@+id/month_transactions"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/ref_day_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/month_container"/>

     <TextView
        android:id="@+id/no_transactions_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="44dp"
        android:textSize="18sp"
        android:textColor="@color/yellow"
        android:layout_below="@+id/month_container"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    
</RelativeLayout>