<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">
  <TextView
      android:id="@+id/type_your_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:textSize="16sp"
      android:layout_marginTop="5dp"
      android:text="@string/notification_settings_title"
      android:textColor="@color/grey_letters"/>
      
  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/type_your_name"
    android:orientation="vertical"
    android:padding="15dp">
                
    <TextView
            android:id="@+id/type_your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="PUSH"
            android:textColor="@color/black"/>

    <ToggleButton
              android:id="@+id/toggle_alert"
              android:layout_width="40dp"
              android:layout_height="20dp"
              android:layout_marginTop="7dp"
              android:layout_marginRight="10dp"
              android:layout_alignParentRight="true"
              android:background="@drawable/switch_bg_grey"
              android:checked="false"
              android:textOff=""
              android:textOn="" />
  </RelativeLayout >
</RelativeLayout>
