<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/calculator_parent_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:savvy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <Button
            android:id="@+id/calculator_button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="@string/send_payment"
            android:textAllCaps="true"
            android:textColor="@color/red_background"
            android:textSize="12sp"
            savvy:customFont="roboto_bold"/>

        <Button
            android:id="@+id/calculator_button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="@string/request_payment"
            android:textAllCaps="true"
            android:textColor="@color/red_background"
            android:textSize="12sp"
            savvy:customFont="roboto_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/calculator_add"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_add_green"/>

        <Button
            style="@style/keyboard_button"
            android:text="1"/>

        <Button
            style="@style/keyboard_button"
            android:text="2"/>

        <Button
            style="@style/keyboard_button"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/calculator_minus"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_minus_green"/>

        <Button
            style="@style/keyboard_button"
            android:text="4"/>

        <Button
            style="@style/keyboard_button"
            android:text="5"/>

        <Button
            style="@style/keyboard_button"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/calculator_x"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_x_green"/>

        <Button
            style="@style/keyboard_button"
            android:text="7"/>

        <Button
            style="@style/keyboard_button"
            android:text="8"/>

        <Button
            style="@style/keyboard_button"
            android:text="9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/calculator_div"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_div_green"/>

        <ImageButton
            android:id="@+id/calculator_decimal"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_decimal_green"/>

        <Button
            style="@style/keyboard_button"
            android:text="0"/>

        <ImageButton
            android:id="@+id/calculator_backspace"
            style="@style/keyboard_image_button"
            android:src="@drawable/ic_erase_green"/>
    </LinearLayout>
</LinearLayout>