<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <RelativeLayout
            android:id="@+id/photo_container"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:paddingTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_account_user_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_camera"/>
        <ImageView
                android:id="@+id/change_photo_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_camera"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="-40dp"
                android:layout_toRightOf="@id/my_account_user_image"
                android:layout_below="@id/my_account_user_image" />

    </RelativeLayout>

    <ListView
            android:id="@+id/options_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:layout_below="@+id/photo_container"/>

</RelativeLayout>
