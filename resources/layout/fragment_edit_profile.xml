<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/full_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/light_grey"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@id/full_name_text"
            android:background="@drawable/grey_bottom_border"
            android:textColor="@color/grey"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_below="@+id/full_name"
            android:textColor="@color/light_grey"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:layout_below="@+id/email_text"
            android:textColor="@color/grey"
            android:paddingTop="5dp"
            android:background="@drawable/grey_bottom_border"
            />

        <TextView
            android:id="@+id/cpf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpf"
            android:layout_below="@+id/email_address"
            android:textColor="@color/light_grey"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/user_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpf_text"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:background="@drawable/grey_bottom_border"
            android:textColor="@color/grey"
            android:inputType="number"/>

        <TextView
            android:id="@+id/birth_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_date"
            android:layout_below="@+id/user_cpf"
            android:layout_marginTop="15dp"
            android:textColor="@color/light_grey"
            />

        <EditText
            android:id="@+id/user_birth_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_bottom_border"
            android:paddingTop="5dp"
            android:layout_below="@+id/birth_date_text"
            android:maxLength="10"
            android:inputType="date"
            android:textColor="@color/grey"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textStyle="bold"
            android:layout_below="@+id/user_birth_date"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_centerHorizontal="true"
            style="@style/red_button"/>

    </RelativeLayout>
</ScrollView>