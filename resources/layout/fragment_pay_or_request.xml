<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:savvy="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/pay_or_request_fl"
             tools:context="com.rapdin.all_fragments.PayOrRequestFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/establishments_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingBottom="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/establishment_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_menu_camera"/>

            <TextView
                    android:id="@+id/you_got_credits_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/establishment_image"
                    android:text="@string/you_got_credits_on_establishment"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="15dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:text="@string/pay_or_request_search_tip"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:id="@+id/pay_or_request_label1"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/pay_or_request_users_name"
                    android:textCursorDrawable="@null"
                    android:layout_below="@id/pay_or_request_label1"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:maxLines="1"
                    android:singleLine="true"
                    savvy:customFont="roboto_thin"/>
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:src="@drawable/icon_error"
                    android:layout_below="@id/pay_or_request_label1"
                    android:layout_alignParentRight="true"
                    android:id="@+id/pay_or_request_img_clear"
                    android:visibility="gone"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_grey"
                    android:layout_below="@id/pay_or_request_users_name"
                    android:id="@+id/pay_or_request_separator"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pay_or_request_label2"
                    android:text="@string/near_establishments"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@id/pay_or_request_separator"
                    savvy:customFont="roboto_bold"/>
            <android.support.v4.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pay_or_request_refresh_list_view"
                    android:layout_below="@id/pay_or_request_label2"
                    android:layout_above="@+id/pay_or_request_request_button">
                <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/pay_or_request_list_view"
                        android:divider="@null"
                        android:dividerHeight="0dp"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_below="@id/pay_or_request_separator"
                    android:id="@+id/pay_or_request_form_container"
                    android:weightSum="2">
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:fillViewport="true"
                        android:id="@+id/pay_or_request_form_scroll">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                    >

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:text="@string/value"
                                        android:paddingBottom="7dp"/>
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                    <TextView
                                            android:id="@+id/currency_prefix"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:paddingRight="3dp"
                                            android:text="R$"/>
                                    <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textCursorDrawable="@null"
                                            android:background="@null"
                                            android:maxLines="1"
                                            android:inputType="numberDecimal"
                                            android:maxLength="13"
                                            android:textColor="@color/grey"
                                            savvy:customFont="roboto_thin"
                                            android:textSize="16sp"
                                            android:gravity="right"
                                            android:id="@+id/pay_or_request_value"
                                    />
                                </LinearLayout>
                                <View
                                        android:id="@+id/value_bottom_border"
                                        android:layout_width="fill_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/light_grey"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    android:paddingLeft="25dp">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/change_wallet"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"
                                        android:id="@+id/show_change_wallet"
                                        android:paddingBottom="10dp"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/comments"
                                android:textSize="14sp"
                                android:paddingTop="10dp"/>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_emoji_people_light_normal"
                                    android:id="@+id/emoji_button"
                                    android:visibility="gone"/>
                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:textCursorDrawable="@null"
                                    android:layout_toLeftOf="@id/emoji_button"
                                    android:textSize="16sp"
                                    android:background="@null"
                                    android:textColor="@color/grey"
                                    android:inputType="textMultiLine"
                                    android:minLines="3"
                                    android:id="@+id/pay_or_request_comments"/>
                        </RelativeLayout>
                        <View
                                android:id="@+id/comment_bottom_border"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/light_grey"/>

                        <LinearLayout
                                android:id="@+id/pay_or_request_buttons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:orientation="vertical">

                            <RelativeLayout
                                    android:id="@+id/no_account_alert_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/dark_grey"
                                    android:padding="15dp">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/pay_or_request_alert_clear"
                                        android:layout_toStartOf="@+id/pay_or_request_alert_clear"
                                        android:paddingEnd="10dp"
                                        android:paddingRight="10dp"
                                        android:text="@string/user_has_no_account"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>

                                <ImageView
                                        android:id="@+id/pay_or_request_alert_clear"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/icon_error"
                                        android:visibility="visible"/>
                            </RelativeLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <Button
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="fill"
                                        android:textColor="@color/dark_grey"
                                        android:background="@drawable/button_grey"
                                        android:text="@string/send_payment"
                                        savvy:customFont="roboto_bold"
                                        android:textAllCaps="true"
                                        android:textSize="12sp"
                                        android:id="@+id/send_payment_button"/>

                                <Button
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/dark_grey"
                                        android:background="@drawable/button_grey"
                                        android:text="@string/request_payment"
                                        savvy:customFont="roboto_bold"
                                        android:textAllCaps="true"
                                        android:textSize="12sp"
                                        android:id="@+id/request_payment_button"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
                <FrameLayout
                        android:id="@+id/emojicons"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
